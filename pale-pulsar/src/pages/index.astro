import Experience from "../sections/Experience.astro";
import Proyectos from "../sections/Proyectos.astro";
import SobreMi from "../sections/SobreMi.astro";
import BgColor from "../components/BgColor.astro";
---

<Layout
  title="Portafolio de Lucas Roman - Desarrollador web con 2 años de experiencia"
  description="Contrata a Lucas Roman para crear tu aplicación web. Desarrollador Web."
>
